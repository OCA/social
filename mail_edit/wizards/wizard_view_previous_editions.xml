<odoo>

    <record model="ir.ui.view" id="wizard_view_previous_editions_form_view">
        <field name="name">wizard.view.previous.editions.form (in mail_edit_chatter)</field>
        <field name="model">wizard.view.previous.editions</field>
        <field name="arch" type="xml">
            <form string="View Previous Editions">
                <notebook>
                    <page string="Previous Editions">
                        <field name="edited_message_ids"/>
                    </page>
                </notebook>
                <footer>
                    <button string="Close" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
