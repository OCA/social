<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.error.activity.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='activities_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="activity_on_mail_error">
                    <div class="o_setting_left_pane">
                        <field name="activity_on_mail_error" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="activity_on_mail_error" />
                        <div class="text-muted" id="activity_on_mail_error">
                            Set activity on mail send error
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
