<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="mail.ChatWindowHeader" t-inherit-mode="extension" owl="1">
        <xpath expr="div[hasclass('o_ChatWindowHeader')]" position="attributes">
            <attribute
                name="t-att-data-thread-model"
            >chatWindow.thread &amp;&amp; chatWindow.thread.model &amp;&amp; chatWindow.thread.model !== 'mail.channel' ? chatWindow.thread.model : 'chat'</attribute>
        </xpath>
    </t>
</templates>
