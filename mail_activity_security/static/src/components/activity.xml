<templates xml:space="preserve">

    <t t-inherit="mail.Activity" t-inherit-mode="extension" owl="1">
        <Popover title="MARK_DONE" position="replace">
            <t t-if="activity.canMarkAsDone">
                <t>$0</t>
            </t>
        </Popover>
        <button t-on-click="_onClickEdit" position="replace">
            <t t-if="activity.canEdit">
                <t>$0</t>
            </t>
        </button>
        <button t-on-click="_onClickCancel" position="replace">
            <t t-if="activity.canCancel">
                <t>$0</t>
            </t>
        </button>
    </t>

</templates>
