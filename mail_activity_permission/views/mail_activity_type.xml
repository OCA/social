<odoo>
    <record id="mail_activity_type_view_form" model="ir.ui.view">
        <field name="model">mail.activity.type</field>
        <field name="inherit_id" ref="mail.mail_activity_type_view_form" />
        <field name="arch" type="xml">
            <group position="inside">
                <group name="mail_activity_permission" string="Permissions">
                    <group>
                        <field name="perm_read" />
                        <field
                            name="perm_write"
                            attrs="{'invisible': [('perm_read', '=', False)]}"
                        />
                        <field
                            name="field_ids"
                            attrs="{'invisible': [('perm_read', '=', False)]}"
                            widget="many2many_tags"
                        />
                    </group>
                    <group
                        name="mail_activity_permission_code"
                        attrs="{'invisible': [('res_model_id', '=', False)]}"
                    >
                        <field
                            name="code_activity_done"
                            widget="ace"
                            options="{'mode': 'python'}"
                        />
                        <field name="label_activity_done" />
                        <field
                            name="code_user_selection"
                            widget="ace"
                            options="{'mode': 'python'}"
                        />
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
