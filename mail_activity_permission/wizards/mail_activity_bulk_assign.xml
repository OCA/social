<odoo>
    <record id="view_mail_activity_bulk_assign_form" model="ir.ui.view">
        <field name="model">mail.activity.bulk.assign</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="res_id" position="attributes">
                <attribute name="required">False</attribute>
            </field>
            <field name="res_model_id" position="attributes">
                <attribute name="required">False</attribute>
            </field>
            <field name="user_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="user_id" position="after">
                <field name="user_ids_visible" invisible="True" />
                <field
                    name="user_ids"
                    widget="many2many_tags"
                    attrs="{'invisible': [('user_ids_visible', '=', False)]}"
                />
            </field>
        </field>
    </record>
    <act_window
        id="action_mail_activity_bulk_assign"
        name="Assign activities"
        res_model="mail.activity.bulk.assign"
        target="new"
        view_mode="form"
    />
</odoo>
