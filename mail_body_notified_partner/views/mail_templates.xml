<odoo>
    <data>

        <template
            id="message_notification_email"
            inherit_id="mail.message_notification_email"
        >
            <xpath expr="//div[@t-raw='message.body']" position="before">
                <div><p>
                    Also notified:
                    <span t-field="record.message_partner_ids" />
                </p></div>
            </xpath>
        </template>

        <template
            id="message_notification_light"
            inherit_id="mail.mail_notification_light"
        >
            <xpath expr="//t[@t-raw='message.body']" position="before">
                <div><p>
                    Also notified:
                    <span t-field="record.message_partner_ids" />
                </p></div>
            </xpath>
        </template>

    </data>
</odoo>
