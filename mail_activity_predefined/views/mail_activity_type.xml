<odoo>

<record id="model_mail_activity_type_form" model="ir.ui.view">
    <field name="model">mail.activity.type</field>
    <field name="inherit_id" ref="mail.mail_activity_type_view_form" />
    <field name="arch" type="xml">
        <field name="force_next" position="before">
            <field name="predefined" />
            <field
                    name="predefined_condition"
                    widget="ace"
                    options="{'mode': 'python'}"
                    attrs="{'invisible': [('predefined', '=', False)]}"
                />
            <pre
                    attrs="{'invisible': [('predefined', '=', False)]}"
                    class="oe_edit_only"
                >
                Available variables:
                - env: Current odoo environment
                - record: Current record
            </pre>
        </field>
    </field>
</record>

</odoo>
