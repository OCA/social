<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">Company Form - SPAM Settings</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="reverend_thomas_ids"
                       widget="many2many_tags"
                       />
                <field name="pyzor_account_ids"
                       widget="many2many_tags"
                       domain="[('server_id', 'in', 'reverend_thomas_ids')]"
                       nocreate="1"
                       attrs="{'invisible': [('reverend_thomas_ids', '=', False)]}"
                       />
            </xpath>
        </field>
    </record>
</odoo>
