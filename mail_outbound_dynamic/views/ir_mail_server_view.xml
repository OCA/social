<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_mail_server_form" model="ir.ui.view">
        <field name="name">ir.mail_server.form</field>
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='smtp_pass']" position="after">
                <field name="smtp_from"/>
                <field name="allowed_domain" attrs="{'invisible': [('smtp_from', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
