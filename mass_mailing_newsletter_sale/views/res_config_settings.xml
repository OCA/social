<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_mass_mailing_sale_form" model="ir.ui.view">
    <field name="name">view.mass_mailing_sale.form</field>
    <field name="model">res.config.settings</field>
    <field name='inherit_id' ref='mass_mailing.res_config_settings_view_form' />
    <field name="arch" type="xml">
      <xpath expr="//div[@data-key='mass_mailing']" position="inside">
        <h2>Marketing on sale</h2>
        <div class="row mt16 o_settings_container">
        <div class="col-12 col-lg-6 o_setting_box" id="confirmation_mailing_list_id">
          <div class="o_setting_right_pane">
            <span class="o_form_label">Mailing list</span>
            <div class="text-muted">
              Mailing list to subscribe when a sale is paid from website.
            </div>
            <div class="row mt16">
              <label
                                    for="sale_mailing_list_id"
                                    string="Mailing list"
                                    class="col-lg-4 o_light_label"
                                />
              <field name="sale_mailing_list_id" class="oe_inline" />
            </div>
          </div>
        </div>
      </div>
      </xpath>
  </field>
</record>
</odoo>
