<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="view_mail_activity_type_action_form" model="ir.ui.view">
            <field name="name">view.mail_activity_type_action.form</field>
            <field name="model">mail.activity.type.action</field>
            <field name="arch" type="xml">
                <form string="Action">
                    <group name="main">
                        <field name="res_model" invisible="1" />
                        <field
                        name="filter_domain"
                        widget="domain"
                        options="{'model': 'res_model', 'in_dialog': True}"
                    />
                        <field name="auto_action_id" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_mail_activity_type_action_tree" model="ir.ui.view">
            <field name="name">view.mail_activity_type_action.tree</field>
            <field name="model">mail.activity.type.action</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle" />
                    <field name="filter_domain" />
                    <field name="auto_action_id" />
                </tree>
            </field>
        </record>


</odoo>
