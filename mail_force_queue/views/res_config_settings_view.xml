<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="emails" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="mail_queue_settings">
                    <div class="o_setting_left_pane">
                        <field name="force_mail_queue" />
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <label for="force_mail_queue" />
                            <div class="text-muted" id="force_mail_queue">
                                Force all outgoing emails to be queued
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
