<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="mail_print">
      <t t-call="web.external_layout">
        <div class="page">
          <div class="oe_structure" />
            <div t-foreach="o.partner_ids" t-as="p" class="row">
              <div class="col-5 offset-7">
                <address
                            t-field="o.partner_ids"
                            t-field-options='{"widget": "contact",
                                           "fields": ["address", "name"],
                                           "no_marker": true}'
                        />
              </div>
            </div>
            <br />
            <div class="row">
              <b>Subject : <span t-field="o.subject" /></b>
            </div>
            <br />
            <div class="row">
              <span class="email_preview" t-raw="o.body" />
            </div>
        </div>
      </t>
    </template>

    <template id="report_mail_print">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="mail_as_letter.mail_print" />
        </t>
      </t>
    </template>

    <record id="qweb_mail_pdf_export" model="ir.actions.report">
        <field name="name">Mail as Letter</field>
        <field name="model">mail.compose.message</field>
        <field name="type">ir.actions.report</field>
        <field name="report_name">mail_as_letter.report_mail_print</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="base.paperformat_euro" />
    </record>

</odoo>
